# =============================================================================
# Application Configuration
# =============================================================================

# Active database: mysql, elasticsearch, or neo4j
ACTIVE_DB=mysql

# Domain database roles (optional, fallback to ACTIVE_DB where applicable)
# Use these to prepare for service-level split without changing code paths.
TRANSACTIONS_DB=mysql
ANALYTICS_DB=mysql
USER_DB=mysql

# =============================================================================
# MySQL Configuration (required when ACTIVE_DB=mysql)
# =============================================================================

# MySQL connection string
# Format: mysql+pymysql://user:password@host:port/database
DATABASE_URL=mysql+pymysql://root:your-password-here@localhost:3307/finans_tracker

# =============================================================================
# Elasticsearch Configuration (required when ACTIVE_DB=elasticsearch)
# =============================================================================

# Elasticsearch host URL
ELASTICSEARCH_HOST=http://localhost:9200

# Whether to sync data to Elasticsearch (when using hybrid mode)
SYNC_TO_ELASTICSEARCH=false

# =============================================================================
# Neo4j Configuration (required when ACTIVE_DB=neo4j)
# =============================================================================

# Neo4j connection URI
NEO4J_URI=bolt://localhost:7687

# Neo4j credentials
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# Whether to use Neo4j for GraphQL queries
USE_NEO4J=false

# =============================================================================
# Application / Observability
# =============================================================================

# Environment: development, staging, production
# In development, logs use human-readable format; otherwise JSON
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Security (required)
# =============================================================================

# JWT secret key for token signing (required)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# JWT token expiration time in minutes (default: 60)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
